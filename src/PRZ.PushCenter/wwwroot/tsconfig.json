{
  "compilerOptions": {
    "baseUrl": "./js",
    "paths": {
      "@js/*": [
        "*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}